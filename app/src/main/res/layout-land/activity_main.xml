<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradbackground"
    android:orientation="horizontal"
    tools:context="ai.thanasakis.uda.physicsquiz.MainActivity">

    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:layout_width="0dp"
        android:layout_margin="@dimen/left_right_margin"
        android:layout_weight="1"
        android:visibility="visible">

        <TextView
            android:id="@+id/textViewQuestionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/left_right_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewQuestionType"
            android:layout_margin="@dimen/left_right_margin"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medium2_text" />
    </LinearLayout>

    <RelativeLayout
        style="@style/LinearLayoutStyle"
        android:layout_width="0dp"
        android:layout_margin="@dimen/left_right_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_weight="1"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/LayoutCheck"
            style="@style/LinearLayoutStyle"
            android:layout_margin="@dimen/left_right_margin"
            android:paddingTop="@dimen/medium_margin">

            <CheckBox
                android:id="@+id/checkBox1"
                style="@style/checkradiobox"
                android:tag="a" />

            <CheckBox
                android:id="@+id/checkBox2"
                style="@style/checkradiobox"
                android:tag="b" />

            <CheckBox
                android:id="@+id/checkBox3"
                style="@style/checkradiobox"
                android:tag="c" />

            <CheckBox
                android:id="@+id/checkBox4"
                style="@style/checkradiobox"
                android:layout_marginBottom="@dimen/small_margin"
                android:tag="d" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutEdit"
            style="@style/LinearLayoutStyle"
            android:paddingTop="@dimen/medium_margin">

            <EditText
                android:id="@+id/EditAnswer"
                style="@style/edittextbox"
                android:hint="@string/hint" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutRadio"
            style="@style/LinearLayoutStyle"
            android:paddingTop="@dimen/medium_margin">

            <RadioGroup
                android:id="@+id/QuestionRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton1"
                    style="@style/checkradiobox" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    style="@style/checkradiobox" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    style="@style/checkradiobox" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    style="@style/checkradiobox"
                    android:layout_marginBottom="@dimen/medium_margin" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/buttonNext"
            style="@style/button1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="onClicÎºNext"
            android:text="@string/next" />
    </RelativeLayout>

</LinearLayout>
